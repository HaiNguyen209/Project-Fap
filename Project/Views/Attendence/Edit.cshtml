@{
    Layout = "~/Views/Shared/Layout.cshtml";

}
@using Project.Model
@model List<Attendance>
 
 <div class="content">
    <h1>Edit Attendence</h1>
    <form asp-controller="Attendence" asp-action="Edit" method="post">
        <table>
            <thead>
                <tr>
                    <td hidden></td>
                    <td>Index</td>
                    @*<td>Image</td>*@
                    <td>Member</td>
                    <td>Code</td>
                    <td>Name</td>
                    <td>Status</td>
                </tr>
            </thead>
                
            @for (int i = 0; i < @Model.Count(); i++)
            {
                <tr>
                    <td hidden> <input class="content-input" asp-for="@Model[i].TeacherId" type="text" hidden />
                    <input class="content-input" asp-for="@Model[i].StudentId" type="text"  hidden  />
                    <input class="content-input" asp-for="@Model[i].ClassId" type="text"  hidden /></td>
                    <td><input class="content-input" asp-for="@Model[i].Id"  readonly/> </td>
                    @*<td><input asp-for="@Model[i].Image" type="text"  /></td>*@
                    <td><input class="content-input" asp-for="@Model[i].RollNumber" type="text"  /></td>
                    <td><input class="content-input" asp-for="@Model[i].Code" type="text" /></td>
                    <td><input class="content-input" asp-for="@Model[i].Name" type="text"  /></td>
                    <td>
                        <input id="@Model[i].Id" type="radio" asp-for="@Model[i].Status" value="true" /> <label class="attendend">Attendence</label>
                        <input id="@Model[i].Id" type="radio" asp-for="@Model[i].Status" value="false" /> <lalel class="absent">Absent</lalel> 
                    </td>
                   
                </tr>
            }
        </table>
        <input class="edit" type="submit" value="Save"/>
    </form>
</div>