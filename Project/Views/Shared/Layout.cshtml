<!DOCTYPE html>
<html>
    <head>
        <style>
            .container {
                max-width: 1024px;
                margin: auto auto;
            }

            .breadcrumb {
                background-color: #f5f5f5;
                border-radius: 4px;
                padding: 4px 8px;
                margin: 1rem 0rem;
                display: flex;
                justify-content: end;
            }

            .breadcrumb a {
                text-decoration: none;
                background-color: #5cb85c;
                color: #fff;
                border-radius: .25rem;
                font-weight: 700;
                font-size: .75rem;
                padding: .3rem;
                margin: 0 0.2rem;
            }

            .content table {
                width: 100%;
                background-color: transparent;
                border-collapse: collapse;
            }

            .content table tr {
                border-bottom: 1px solid #f0f0f0;
            }

            .edit {
                position: absolute;
                text-decoration: none;
                background-color: #f3f3f3;
                color: #000;
                width: max-content;
                padding: 0.4rem 0.6rem;
                border-radius: 8px;
                text-align: center;
                left: 50%;
                margin-top: 1rem;
                font-weight: 700;
                margin-bottom: 4rem;
            }

            .edit:hover {
                background-color: #337ab7;
                color: #fff;
            }

            .content table thead tr {
                background-color: #337ab7;
                color: white;
            }

            .attendend {
                color: green;
            }

            .absent {
                color: red;
            }
            .content-input{
                border:none;
            }

        </style>
    </head>
    <body>
        <div class="container">
            <header>
                <h1>
                     FPT University Acadumic Portal
                </h1>
            </header>
           <div class="breadcrumb">
            @*    @if(@ViewBag.userName != null)
                    {
                        <a> @ViewBag.userName</a>
                    }*@
                    <a asp-controller="Home" asp-action="Login"> Login </a>
                    <a> Campus:FPTU- Hoà Lạc</a>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </body>
</html>

