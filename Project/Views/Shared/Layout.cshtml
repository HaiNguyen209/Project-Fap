@using Project.Helpers
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
    <head>
        <style>

            .container {
                max-width: 1024px;
                margin: auto auto;
            }

            .breadcrumb {
                background-color: #f5f5f5;
                border-radius: 4px;
                padding: 4px 8px;
                margin: 1rem 0rem;
                display: flex;
                justify-content: end;
            }

            .breadcrumb a {
                text-decoration: none;
                background-color: #5cb85c;
                color: #fff;
                border-radius: .25rem;
                font-weight: 700;
                font-size: .75rem;
                padding: .3rem;
                margin: 0 0.2rem;
            }

            .content table {
                width: 100%;
                background-color: transparent;
                border-collapse: collapse;
            }

            .content table tr {
                border-bottom: 1px solid #f0f0f0;
            }

            .btnsubmit {
                position: absolute;
                text-decoration: none;
                background-color: #f3f3f3;
                color: #000;
                width: max-content;
                padding: 0.4rem 0.6rem;
                border-radius: 8px;
                text-align: center;
                left: 50%;
                margin-top: 1rem;
                font-weight: 700;
                margin-bottom: 4rem;
                border:none;
            }

            .btnsubmit:hover {
                background-color: #337ab7;
                color: #fff;
                cursor: pointer;
            }

            .content table thead tr {
                background-color: #337ab7;
                color: white;
            }

            .attendend {
                color: green;
            }

            .absent {
                color: red;
            }
            .content-input{
                border:none;
                pointer-events:none;
            }
/*            input{
                width: 75%;
                height: 25px;
                padding: 6px 12px;
                font-size: 14px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-shadow: 0 1px 1px rgb(0 0 0 / 8%);
            }*/
            a{
                text-decoration:none;
            }
            a:hover{
                color:blue;            }

        </style>
    </head>
    <body>
        <div class="container">
            <header>
                <h1>
                     FPT University Acadumic Portal
                </h1>
            </header>
           <div class="breadcrumb">
                @if(@Context.Session.GetString("username") != null)
                {
                    <a asp-controller="Student" 
                        asp-action="ViewProfile" 
                        asp-route-username="@Context.Session.GetString("username")">
                        @Context.Session.GetString("username")
                     </a>
                }
                else
                {
                 
                }
                    <a asp-controller="Login" asp-action="Index" asp-route-s=""> LogOut </a>
                    <a> Campus:FPTU- Hoà Lạc</a>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </body>
</html>

