
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using Project.Model
@model Account
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    .container{
        position: absolute;
        top: 10%;
        left:34%;
        height: 500px;
        width: 500px; 
        border-radius:8px;
        box-shadow: 0 15px 20px rgba(0, 0, 0, 0.3); 
        z-index: 1;
        border:0.5px;
    }
    .content{
        margin: 1rem;
    }
    .content h1{
        font-weight:700;
        text-align: center;
    }
    .content form{

    }
    .form-login {
        display: flex;
        flex-direction: column;

    }
    .form-login label{
        font-size: 1.5rem;
        font-weight:600;
        margin-bottom: 1rem;
        margin-top:.5rem;
    }
    .form-login input ,  .login-button{
       height: 35px;
       border-radius: 8px;
       box-shadow: 0 1px 5px rgb(0, 0, 0, 0.3);
       border:0.5px;
       padding: 0 5px;
    }
    .form-login span{
       color: red;
    }
    .login-button{
        font-size: 1.2rem;
        font-weight:700;
        margin-top:2rem;
        cursor:pointer;
    }
</style>

<div class="container">
    <div class="content">
         <h1 >
             Sign In
         </h1>
        <br />
        <p>@ViewBag.messNorify</p>
        <form asp-controller="Login" asp-action="Index" method="post" class="form-login">
            @if(@ViewBag.messNotify != null)
            {
                <span>@ViewBag.messNotify</span>
            }
            <label>
                  Username 
             </label>
              <input type="text" placeholder="Please input username" asp-for="UserName"/> 
              <span asp-validation-for="UserName" ></span>
             <label>
                 Password
             </label> 
             <input type="password"  asp-for="Password" placeholder=" Please input password"/>
              <span asp-validation-for="Password" ></span>
             <input type="submit" value="Login" class="login-button"/>
        </form>
    </div>
    
</div>



